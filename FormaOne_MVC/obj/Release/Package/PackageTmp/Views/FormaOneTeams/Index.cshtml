@model IEnumerable<FormaOne_MVC.Models.FormaOneTeam>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
}



<p>
    @if (Request.IsAuthenticated)
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Founded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WinCup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payed)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Founded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinCup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payed)
            </td>
            <td>
                @if(Request.IsAuthenticated)
                { 
                @Html.ActionLink("Edit |", "Edit", new { id = item.Id })
                @Html.ActionLink(" Delete", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
